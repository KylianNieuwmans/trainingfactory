{% extends 'base.html.twig' %}

{% block body %}
    <div class="text-center">
        <img src="{{ asset('images.jpeg') }}" width="100px" height="100px">
        <h1>Trainingfactory</h1>
    </div>
    <nav class="navbar navbar-inverse">
        <div class="container-fluid">
            <div class="navbar-header">
                <a class="navbar-brand" href="{{ path('admin') }}">Trainingfactory</a>
            </div>
            <ul class="nav navbar-nav">
                <li class="col-3"> <a href="{{ path('trainingen') }}">Trainingen</a></li>
                <li class="col-3"> <a href="{{ path('beheerLessen') }}">Lessen</a></li>
                <li class="col-3"> <a href="{{ path('leden') }}">Leden</a></li>
                <li class="col-3"> <a href="{{ path('logout') }}">Logout</a></li>
            </ul>
        </div>
    </nav>
    <table class="table">
    <thead>
    <tr>
        <th scope="col">Naam</th>
        <th scope="col">Adres</th>
        <th scope="col">Woonplaats</th>
        <th scope="col">Veranderen</th>
        <th scope="col">Verwijderen</th>
    </tr>
    </thead>
    {% for lid in leden %}
        <tr class="list">
            <td class="list-item">{{ lid.naam}}</td>
            <td class="list-item">{{ lid.adres }}</td>
            <td class="list-item">{{ lid.woonplaats }}</td>
            <td class="list-item"><a href="{{ path('lidBewerken', {"lidId":lid.id}) }}">Wijzig</a></td>
            <td class="list-item"><a href="{{ path('lidVerwijderen', {"lidId":lid.id}) }}">Verwijderen</a></td>
        </tr>
    {% endfor %}
{% endblock %}