{% extends 'base.html.twig' %}

{% block body %}
    <div class="text-center">
        <img src="{{ asset('images.jpeg') }}" width="100px" height="100px">
        <h1>Trainingfactory</h1>
    </div>
    <nav class="navbar navbar-inverse">
        <div class="container-fluid">
            <div class="navbar-header">
                <a class="navbar-brand" href="{{ path('lid') }}">Trainingfactory</a>
            </div>
            <ul class="nav navbar-nav">
                <li class="col-3"> <a href="{{ path('lessen') }}">Lessen</a></li>
                <li class="col-3"> <a href="{{ path('logout') }}">Logout</a></li>
            </ul>
        </div>
    </nav>
<h2>Schrijf je in voor de lessen!</h2>
    <table class="table">
        <th class="col-md-auto">Naam</th>
        <th class="col-md-auto">Instructeur</th>
        <th class="col-md-auto">Locatie</th>
        <th class="col-md-auto">Tijd</th>
        <th class="col-md-auto">Datum</th>
        <th class="col-md-auto">Inschrijven</th>
        {% for les in lessen %}
            <tr>
                <td>{{ les.training.beschrijving}}</td>
                <td>{{ les.instructeur.voornaam}}</td>
                <td>{{ les.locatie}}</td>
                <td>{{ les.tijd|date('H:i:s')}}</td>
                <td>{{ les.datum|date('d-m-y')}}</td>
                <td><a href="{{ path('inschrijven', {"lesId":les.id}) }}">Inschrijven</a></td>
            </tr>
        {% endfor %}
    </table>

    <h2>Lessen waarvoor je ingeschreven staat</h2>
    <table class="table">
        <th class="col-md-auto">Naam</th>
        <th class="col-md-auto">Instructeur</th>
        <th class="col-md-auto">Locatie</th>
        <th class="col-md-auto">Tijd</th>
        <th class="col-md-auto">Datum</th>
        <th class="col-md-auto">Uitschrijven</th>
        {% for les in lessen %}
            <tr>
                <td>{{ les.training.beschrijving}}</td>
                <td>{{ les.instructeur.voornaam}}</td>
                <td>{{ les.locatie}}</td>
                <td>{{ les.tijd|date('H:i:s')}}</td>
                <td>{{ les.datum|date('d-m-y')}}</td>
                <td><a href="{{ path('inschrijven', {"lesId":les.id}) }}">Inschrijven</a></td>
            </tr>
        {% endfor %}
    </table>

{% endblock %}